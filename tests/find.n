# இது ஒரு எழில் தமிழ் நிரலாக்க மொழி உதாரணம்
# finds y in list-x and returns its position
# a -1 means not found.
நிரல்பாகம்  local_find ( x, y )
    மு = -1;

    @( டி = 0, டி < len(x), டி = டி+1 )  ஆக
        @( y == x[டி] ) ஆனால்
               மு = டி ;
               நிறுத்து
        முடி
    முடி

    பின்கொடு மு;
முடி

இடம் = local_find( [3,1,4,1,5,9], 0 )
assert( இடம் == -1 )

இடம் = local_find( [3,1,4,1,5,9], 9 )
assert( இடம் == 5)
